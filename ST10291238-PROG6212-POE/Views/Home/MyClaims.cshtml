
@{
    ViewData["Title"] = "My Claims";
    var claims = ViewData["Claims"] as List<ST10291238_PROG6212_POE.Models.ClaimsTable>;
}

<h2>My Claims</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer Name</th>
            <th>Programme</th>
            <th>Claim Date</th>
            <th>Claim Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (claims != null)
        {
            @foreach (var claim in claims)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.LecturerName @claim.LecturerSurname</td>
                    <td>@claim.Programme</td>
                    <td>@claim.ClaimDate.ToShortDateString()</td>
                    <td>@claim.ClaimAmount</td>
                    <td>@claim.Status</td>
                </tr>
            }
        }
    </tbody>
</table>
