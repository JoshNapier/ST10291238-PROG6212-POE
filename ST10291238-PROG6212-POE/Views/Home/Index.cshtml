@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-4"> @*Card menu item that allows users to be transferred to the Submit view*@
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Submit New Claim</h5>
                <a asp-controller="Home" asp-action="Submit" class="btn btn-primary">Submit</a>
            </div>
        </div>
    </div>
    <div class="col-md-4"> @*Card menu item that allows users to be transferred to the MyClaims view*@
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">View My Claims</h5>
                <a asp-controller="Home" asp-action="MyClaims" class="btn btn-secondary">View Claims</a>
            </div>
        </div>
    </div>
    <div class="col-md-4"> @*Card menu item that allows users to be transferred to the Approvals view (Manager users only)*@
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Pending Approvals</h5>
                <a asp-controller="Home" asp-action="Approvals" class="btn btn-warning">View Approvals</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5"> @*This section will show the status of all ongoing claims*@
    <h3>Claim Status Overview</h3>
    <p>Here, you can see the current status of your claims.</p>
</div>
